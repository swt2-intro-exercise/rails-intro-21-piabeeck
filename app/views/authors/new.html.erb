<h1>New Author</h1>

<%= form_with scope: :author, url: authors_path, local: true do |form| %> 

    <p>
        <%= form.label 'author[first_name]' %><br>
        <%= form.text_field :first_name %>
    </p>
   
    <p>
        <%= form.label 'author[last_name]' %><br>
        <%= form.text_area :last_name %>
    </p>

    <p>
        <%= form.label 'author[homepage]' %><br>
        <%= form.text_area :homepage %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>

  <% end %>