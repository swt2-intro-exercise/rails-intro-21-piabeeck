<h1>Edit Author</h1>

<%= form_with(model: @author, local: true) do |form| %> 

    <% if @author.errors.any? %>
        <div id="error_explanation">
            <h2>
            <%= pluralize(@author.errors.count, "error") %> prohibited this article from being saved: 
            </h2>
            <ul>
                <% @author.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                    <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label 'author[first_name]' %><br>
        <%= form.text_field :first_name %>
    </p>
   
    <p>
        <%= form.label 'author[last_name]' %><br>
        <%= form.text_area :last_name %>
    </p>

    <p>
        <%= form.label 'author[homepage]' %><br>
        <%= form.text_area :homepage %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>

  <% end %>

  <p> <%= link_to 'Back', authors_path %> </p>